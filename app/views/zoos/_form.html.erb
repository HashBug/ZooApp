<%= form_for(zoo, html: {class: 'form-horizontal'}) do |f| %>
  <% if zoo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(zoo.errors.count, "error") %> prohibited this zoo from being saved:</h2>

      <ul>
      <% zoo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">

    <div class="col-sm-10">

      <div class="field form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :city %>
        <%= f.text_field :city, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :zipcode %>
        <%= f.number_field :zipcode, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :publish %>
        <%= f.check_box :publish %>
      </div>

      <div class="actions form-group">
        <%= f.submit button_action+" Zoo", class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>

