<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Zoos</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>City</th>
        <th>Zipcode</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <tr> <strong> Published Zoos </strong> </tr>
      <% @zoos.each do |zoo| %>
        <tr>
          <% if zoo.publish %>
            <td><%= link_to zoo.name, zoo %></td>
            <td><%= zoo.city %></td>
            <td><%= zoo.zipcode %></td>
            <!-- <td><%= zoo.publish %></td> -->
            <!-- <td><%= link_to 'Show', zoo %></td> -->
            <td><%= link_to 'Edit', edit_zoo_path(zoo), class: "btn btn-default" %></td>
            <td><%= link_to 'Delete', zoo, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>


  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <tr>  <strong> UnPublished Zoos </strong></tr>
      <% @zoos.each do |zoo| %>
        <tr>
          <% if !zoo.publish %>
            <td><%= link_to zoo.name, zoo %></td>
            <td><%= link_to 'Edit', edit_zoo_path(zoo), class: "btn btn-default" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Add Zoo', new_zoo_path , class: "btn btn-primary"%>
</div>
