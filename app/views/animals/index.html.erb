<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Animals</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Zoo</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @animals.each do |animal| %>
        <tr>
          <td><%= animal.name %></td>
          <td><%= animal.zoo.name %></td>
          <td><%= link_to 'Show', animal, class: "btn btn-info" %></td>
          <td><%= link_to 'Edit', edit_animal_path(animal), class: "btn btn-default" %></td>
          <td><%= link_to 'Delete', animal, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Add Animal', new_animal_path, class: "btn btn-primary" %>
</div>
